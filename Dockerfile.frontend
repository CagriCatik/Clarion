FROM node:20-slim

WORKDIR /app

# Copy package files (context is root, so we access gui/)
COPY gui/package.json ./

# Install dependencies
RUN npm install

# Copy source code (flattening gui/ content into /app)
COPY gui/ .

# Expose Vite port relative to host
EXPOSE 1420

# Run vite with host flag to allow external access
CMD ["npm", "run", "dev", "--", "--host"]
